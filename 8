8.4 Task: Find factorial of a number using function but not recurssion
#include<iostream>
using namespace std;
void fact(int n)
{
    if(n==0|| n==1)
    cout<<"1";
    else{
    int fac=1;
    for(int i=n;i>1;i--)
    fac*=i;
    cout<<fac;}
}
int main()
{
int n;
cin>>n;
fact(n);
}
8.5 Task: Find factorial of a number using recurssion
#include<iostream>
using namespace std;
int fact(int n)
{
    
    if(n==0|| n==1)
   return 1;
    else{
    return fact(n-1)*n;
    }
}
int main()
{
int n;
cin>>n;
cout<<fact(n);
}
